<link rel="stylesheet" href="./css/home.css">
<h1>Anitsocial</h1>

<section id="feeds">
    <h4> Posts </h4>
    <form action="/posts/create" id="new_post_form" method="POST">
        <textarea name="content" cols="30" rows="4" placeholder="Type Here....."></textarea>
        <input type="submit" value="Post">
    </form>
    <div id="posts_container">
        <ul>
            <% for(p of posts){%>
                <li>
                    <%= p.content %>
                    <small>
                        <%= p.user.name %>
                    </small>
                    <div class="comment_class">
                        <% if(locals.user){ %>
                            <form action="/comments/create" id="addComment" method="POST">
                                <textarea name="newComment" cols="30" rows="2" placeholder="Comment Here....."></textarea>  
                                <input type="hidden" name="post_id" value="<%=p._id%>">
                                <input type="submit" value="comment">    
                            </form>
                        <%}%>
                    </div>
                </li>

            <%}%>
        </ul>
    </div>
</section>
