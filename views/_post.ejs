<li>
    <p>
        <%= p.content %>
        <small>
            <%= p.user.name %>
        </small>
        <% if((locals.user) && (locals.user.id==p.user.id)){%>
            <small>
                <a href="/posts/destroy/<%=p.id%>">delete</a>
            </small>
        <%} %>
    </p>
    <div class="comment_class">
        <% if(locals.user){ %>
            <form action="/comments/create" id="addComment" method="POST">
                <textarea name="newComment" cols="30" rows="2" placeholder="Comment Here....."></textarea>  
                <input type="hidden" name="post_id" value="<%=p._id%>">
                <input type="submit" value="comment">    
            </form>
        <%}%>
        <div class="comment_list">
            <ul id="post-comments-<%= p._id %>">
                <% for(c of p.comments){%>
                    <%- include('_comments') %>
                <%}%>
            </ul>
        </div>
    </div>
</li>
